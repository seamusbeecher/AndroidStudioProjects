<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAvatarActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/select_the_avatar"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/female1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/avatar_f_1" />

    <ImageView
        android:id="@+id/female2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/female1"
        app:layout_constraintStart_toStartOf="@+id/female1"
        app:layout_constraintTop_toBottomOf="@+id/female1"
        app:srcCompat="@drawable/avatar_f_2" />

    <ImageView
        android:id="@+id/female3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/female2"
        app:layout_constraintStart_toStartOf="@+id/female2"
        app:layout_constraintTop_toBottomOf="@+id/female2"
        app:srcCompat="@drawable/avatar_f_3" />

    <ImageView
        android:id="@+id/male1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/avatar_m_1" />

    <ImageView
        android:id="@+id/male2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/male1"
        app:layout_constraintStart_toStartOf="@+id/male1"
        app:layout_constraintTop_toBottomOf="@+id/male1"
        app:srcCompat="@drawable/avatar_m_2" />

    <ImageView
        android:id="@+id/male3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/male2"
        app:layout_constraintStart_toStartOf="@+id/male2"
        app:layout_constraintTop_toBottomOf="@+id/male2"
        app:srcCompat="@drawable/avatar_m_3" />
</androidx.constraintlayout.widget.ConstraintLayout>